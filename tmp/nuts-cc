# -- Exit on errors.

set -xe


# -- Set program name and version.

TOOL_SHRT_NAME="nuts-cc"


# -- Print informative messages to stdin.

puts_info() {
  printf "%s: \e[34mInfo:\e[0m %s\n\n" "$TOOL_NAME" "$*"
}


# -- Print success messages to stdin.

puts_success() {
  printf "%s: \e[32mSuccess:\e[0m %s\n\n" "$TOOL_NAME" "$*"
}


# -- Display an error when no flag is used.

error() {
  puts_error "$TOOL_SHRT_NAME: \e[31mError:\e[0m: $*" >&2
  exit 1
}

#   ====== START ======

# -- Remove unwanted files and directories.

FILE_LIST="/tmp/nuts-cc-file.list"

while IFS= read -r ITEM; do
  ITEM="$(echo "$ITEM" | awk '{$1=$1};1')"

  if [[ -e "$ITEM" ]]; then
    echo "Deleting: $ITEM"
    rm -rf "$ITEM"
    find /usr/share/locale/ -name 'calamares-python.mo' -exec rm -f {} \;
  else
    echo "Item not found: $ITEM"
  fi
done < "$FILE_LIST"

puts_success "Success! Cleanup complete, continuing..."


# -- Link kernel image to newer kernel

cd /boot || exit

SORTED_FILES=$(ls -t1 vmlinuz* initrd.img* System.map* config* 2>/dev/null)

HIGHEST_VERSION=""
for FILE in $SORTED_FILES; do
  VERSION=$(echo "$FILE" | grep -oP '(\d+\.){2}\d+-liquorix-amd64')
  if [[ "$VERSION" > "6.3.4-1-liquorix-amd64" ]]; then
    HIGHEST_VERSION="$VERSION"
    break
  fi
done

for FILE in $SORTED_FILES; do
  VERSION=$(echo "$FILE" | grep -oP '(\d+\.){2}\d+-liquorix-amd64')
  if [[ "$VERSION" != "$HIGHEST_VERSION" ]]; then
    rm -f "$FILE"
  fi
done

ln -svf "/boot/vmlinuz-$HIGHEST_VERSION" "/vmlinuz"
ln -svf "/boot/initrd.img-$HIGHEST_VERSION" "/initrd.img"

puts_success "Success! Ready to use newer kernel, continuing..."

#   ====== END ======
